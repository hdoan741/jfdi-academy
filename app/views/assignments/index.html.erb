<%- model_class = Assignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_course_assignment_path(@course),
            :class => 'btn btn-primary' %>

<table class="table table-striped assignments">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th width="5%"><%= model_class.human_attribute_name(:exp) %></th>
      <th width="10%"><%= model_class.human_attribute_name(:close_at) %></th>
      <th width="10%"><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.id %></td>
        <td>
          <%= link_to course_assignment_path(@course, assignment) do %>
            <h4><%= assignment.title %></h4>
          <% end %>
          <%= assignment.description %>
        </td>
        <td><%= assignment.exp %></td>
        <td><%= assignment.close_at %></td>
        <td>
          <% if current_user %>
            <% if current_user.is_student?(@course) %>
              <%= link_to 'Attempt', new_course_assignment_submission_path(@course, assignment), :class => 'btn btn-mini' %>
            <% elsif current_user.is_lecturer?(@course) %>
              <%= link_to edit_course_assignment_path(@course, assignment), :class => 'btn btn-mini' do %>
                <i class="icon-edit"></i>
              <% end %>
              <%= link_to course_assignment_path(@course, assignment),
                          :method => :delete,
                          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                          :class => 'btn btn-mini btn-danger' do %>
                 <i class="icon-trash"></i>
              <% end %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
